<WindowManager>:
    MainWindow:
    SecondWindow:
    ProfileWindow:
    BillsWindow:
    SignupWindow:

<ScrollViewWindow@SecondWindow>
    SecondWindow:
        size_hint: 1, None
        height: 4000

<MainWindow>:
    name: "main"

    Label:
        text: "Welcome!"
        font_size: root.width/25
        bold: True
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .3, 'center_y': .8}
    Label:
        text: "Please sign in to continue."
        font_size: root.width/55
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .32, 'center_y': .74}
    TextInput:
        id: unametxt
        hint_text: "Username"
        size_hint: ".58dp", ".05dp"
        pos_hint: {'center_x': .5, 'center_y': .6}
        multiline: False
    TextInput:
        id: passtxt
        password: True
        hint_text: "Password"
        size_hint: ".58dp", ".05dp"
        pos_hint: {'center_x': .5, 'center_y': .5}
        multiline: False
    Button:
        id: sinbtn
        size_hint: ".58dp", ".08dp"
        pos_hint: {'center_x': .5, 'center_y': .4}
        text: "Sign in"
        font_size: root.width/40
        on_release: 
            app.check_account(unametxt, passtxt)
            root.manager.transition.direction = "left"
    Label:
        text: "Don't have an account? Click sign up."
        font_size: root.width/55
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .36, 'center_y': .23}
    Button:
        id: supbtn
        size_hint: ".58dp", ".08dp"
        background_normal: ''
        background_color: 1, 1, 1, 1
        pos_hint: {'center_x': .5, 'center_y': .15}
        text: "Sign up"
        color: 0, 0, 0, 1
        font_size: root.width/40
        on_release: 
            app.root.current = "signup"
            root.manager.transition.direction = "left"

<SignupWindow>:
    name: "signup"
    usernew: usernewtxt
    namenew: namenewtxt
    emailnew: emailnewtxt
    agenew: agenewtxt
    sexnew: sexnewtxt
    passnew: passnewtxt
    conpassnew: conpassnewtxt
    Label:
        text: "Register Now!"
        font_size: root.width/25
        bold: True
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .90}
    Label:
        text: "Please provide all the ask information."
        font_size: root.width/55
        color: 0, 0, 0, 1
        pos_hint: {'center_x': .5, 'center_y': .83}
    TextInput:
        id: usernewtxt
        hint_text: "Username"
        size_hint: ".45dp", ".045dp"
        pos_hint: {'center_x': .5, 'center_y': .72}
        multiline: False
    TextInput:
        id: namenewtxt
        hint_text: "Full Name"
        size_hint: ".45dp", ".045dp"
        pos_hint: {'center_x': .5, 'center_y': .63}
        multiline: False
    TextInput:
        id: emailnewtxt
        hint_text: "Email"
        size_hint: ".45dp", ".045dp"
        pos_hint: {'center_x': .5, 'center_y': .54}
        multiline: False
    TextInput:
        id: agenewtxt
        hint_text: "Age"
        size_hint: ".20dp", ".045dp"
        pos_hint: {'center_x': .375, 'center_y': .45}
        multiline: False
    TextInput:
        id: sexnewtxt
        hint_text: "Sex"
        size_hint: ".20dp", ".045dp"
        pos_hint: {'center_x': .626, 'center_y': .45}
        multiline: False
    TextInput:
        id: passnewtxt
        password: True
        hint_text: "Password"
        size_hint: ".45dp", ".045dp"
        pos_hint: {'center_x': .5, 'center_y': .36}
        multiline: False
    TextInput:
        id: conpassnewtxt
        password: True
        hint_text: "Confirm Password"
        size_hint: ".45dp", ".045dp"
        pos_hint: {'center_x': .5, 'center_y': .27}
        multiline: False
    Button:
        id: backbtn
        size_hint: ".20dp", ".06dp"
        background_normal: ''
        background_color: 1, 0, .5, 1
        pos_hint: {'center_x': .35, 'center_y': .13}
        text: "Cancel"
        color: 0, 0, 0, 1
        font_size: root.width/50
        on_release: 
            app.root.current = "main"
            root.manager.transition.direction = "right"
    Button:
        id: submitbtn
        size_hint: ".20dp", ".06dp"
        background_normal: ''
        background_color: .7, 0, 1, 1
        pos_hint: {'center_x': .65, 'center_y': .13}
        text: "Submit"
        color: 0, 0, 0, 1
        font_size: root.width/50
        on_release: 
            app.root.current = "main"
            root.manager.transition.direction = "right"

